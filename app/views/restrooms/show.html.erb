<div class="page-header">
  <h3>Restroom #<%= @restroom.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Location</dt>
      <dd><%= @restroom.location %></dd>

      <dt>Standalone</dt>
      <dd><%= @restroom.standalone %></dd>

      <dt>Name</dt>
      <dd><%= @restroom.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/restrooms" class="btn btn-primary">
        Back
      </a>
      <a href="/restrooms/<%= @restroom.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_restroom/<%= @restroom.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
